{
    "compileOnSave": true,
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "none",
        "moduleResolution": "classic",
        "sourceMap": false,
        "noImplicitAny": false,
        "allowJs": true,
        "outDir": "../../out",
        "rootDirs": [
            "../common",
            "../worker"
        ],
        "newLine": "LF",
        "checkJs": true,
        "lib": [
            "webworker",
            "es2017",
            "scripthost"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "../common/**/*.ts",
        "@types/jquery/index.d.ts",
        "node_modules/**/*",
        "jquery/**/*.ts"
    ],
    "include": [
        "../worker/**/*.ts"
    ]
}