{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitAny": false,
        "allowJs": true,
        "outDir": "./out",
        "rootDir": "./src/ts",
        "newLine": "LF",
        "checkJs": true
    },
    "exclude": [
        "./node_modules",
        "jspm_packages",
        "./src/**/*.js",
        "./lib/**/*.js",
        "./_bak/**/*.js",
        "./out/**/*.js"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}