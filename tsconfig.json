{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitAny": false,
        "allowJs": true,
        "outDir": "./out",
        "rootDirs": [
            "./src/common",
            "./src/workers"
        ],
        "newLine": "LF",
        "checkJs": true
    },
    "exclude": [
        "./node_modules",
        "jspm_packages",
        "./src/**/*.js",
        "./lib/**/*.js",
        "./_bak/**/*.js",
        "./out/**/*.js",
        "./src/worker/**/*.*"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}